<h1>Login</h1>
<%- include('partial/flash-messages', {messages: getMessages()}) %>
<form method="POST" action="/login">
    <div class="form-group">
        <label for="user">Username</label>
        <input type="text" class="form-control" id="user" placeholder="Enter username" name="username">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password1" placeholder="Enter password" name="password">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="remember" >
        <label class="form-check-label" for="remember">Remember me!</label>
    </div>
    <div class="form-group">
        <div class="g-captcha" data-sitekey=""></div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>  
</form>
<% if(1 || shouldRequireCaptcha) { %>
    <script src='https://www.google.com/recaptcha/api.js?render=6LdvH3wUAAAAAGg1z1jT253DOYGlcE2pFt-8Z6t4'></script>
    <script>
        $(document).ready(function() {
            grecaptcha.ready(function() {
                console.log('gReCaptcha is ready');
                grecaptcha.execute('6LdvH3wUAAAAAGg1z1jT253DOYGlcE2pFt-8Z6t4', {action: 'login_attempt'})
                .then(function(token) {
                    // Verify the token on the server.
                });
            });
        })
    </script>
<% } %>