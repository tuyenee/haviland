<h1>Login</h1>
<%- include('partial/flash-messages', {messages: getMessages()}) %>
<form method="POST" action="/login">
    <div class="form-group">
        <label for="user">Username</label>
        <input type="text" class="form-control" id="user" placeholder="Enter username" name="username">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password1" placeholder="Enter password" name="password">
    </div>
    <% if(1 || shouldRequireCaptcha) { %>
        <div class="form-group">
            <div class="g-recaptcha" data-sitekey="6LcUW3wUAAAAAHx6uItPxa_rnqg4adBYs3C21D1e"></div>
        </div>
        <script src='https://www.google.com/recaptcha/api.js'></script>
    <% } %>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>  
</form>