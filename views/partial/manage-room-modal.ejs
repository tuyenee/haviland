<div class="modal" id="createRoomModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                New room
            </div>
            <div class="modal-body">
                <form method="POST" action="/rooms">
                    <div class="form-group">
                        <label for="user">Building</label>
                        <input type="text" class="form-control" id="building" placeholder="Building" name="building">
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" placeholder="Address" name="address">
                    </div>
                    <div class="form-group">
                        <label for="number">Room number</label>
                        <input type="number" class="form-control" id="number" placeholder="Number" name="number">
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" id="price" placeholder="Price" name="price">
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Save</button>  
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="deleteRoomModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Delete room
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this room?</p>
                <form method="POST" action="/rooms/delete">
                    <input type="hidden" id="roomId" name="roomId"/>
                    <button type="submit" class="btn btn-danger mt-3 pl-5 pr-5">Sure</button>  
                    <button type="button" class="btn btn-primary mt-3" data-dismiss="modal">Not very sure</button>  
                </form>
            </div>
        </div>
    </div>
</div>